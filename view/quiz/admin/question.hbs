{{#*inline "page"}}
<h1>Question</h1>

{{#each questions}}
<input type="hidden" name="question_id" value="{{this.id}}">
<input type="text" name="text" class="form-control mb-2 mr-sm-2 mb-sm-0" value="{{this.text}}">
    <button type="submit" class="btn btn-info" formaction="/quiz/admin/category/edit">Edit</button>
    <button type="submit" class="btn btn-danger" formaction="/quiz/admin/category/remove">Remove</button>
{{#each this.answers}}
<input type="hidden" name="answer_id" value="{{this.id}}">
{{this.is_correct}}
<input type="text" name="text" class="form-control mb-2 mr-sm-2 mb-sm-0" value="{{this.text}}">
    <button type="submit" class="btn btn-info" formaction="/quiz/admin/category/edit">Edit</button>
    <button type="submit" class="btn btn-danger" formaction="/quiz/admin/category/remove">Remove</button>
{{/each}}
{{/each}}

{{/inline}}
{{~> (parent)~}}