{{#*inline "page"}}

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Score</th>
                <th>Points</th>
                <th>Game Start</th>
                <th>Game Length in sec</th>
                <th>Chosen Categories</th>
                {{#if username}}
                    <th>
                        Action
                    </th>
                {{/if}}
            </tr>
            </thead>
            <tbody>
            {{#each ranks}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{name}}</td>
                    <td>{{score}}</td>
                    <td>{{points}}</td>
                    <td>{{game_start}}</td>
                    <td>{{game_length}}</td>
                    <td>{{categories}}</td>
                    {{#if ../username}}
                        <td>
                            <form method="post" action="/quiz/score/remove">
                                <input type="hidden" name="round_id" value="{{this.round_id}}">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    {{/if}}
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

{{/inline}}
{{~> (parent)~}}